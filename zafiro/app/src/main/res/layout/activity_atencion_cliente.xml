<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AtencionClienteActivity">


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="412dp"
        android:layout_height="70dp"
        android:background="#1B2355"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/logozafiro"
            android:layout_width="74dp"
            android:layout_height="49dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/zafiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:text="Zafiro"
            android:textColor="#FAFAFA"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutAtencionCliente"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout1"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atención al Cliente"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="10dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Para consultas y asistencia, contáctenos:"
            android:textSize="14sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginTop="10dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teléfono: +123 456 7890"
            android:textSize="14sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginTop="5dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: info@zafiro.com"
            android:textSize="14sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginTop="5dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="412dp"
        android:layout_height="70dp"
        android:background="#FFDFDFDF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/usuario"
            android:layout_width="74dp"
            android:layout_height="49dp"
            android:clickable="true"
            app:srcCompat="@drawable/usuario"
            android:contentDescription="Ver tu perfil"/>

        <ImageView
            android:id="@+id/config"
            android:layout_width="74dp"
            android:layout_height="49dp"
            app:srcCompat="@drawable/configuraciones" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>